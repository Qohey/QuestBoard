extends ../layout

block content
  form.form-inline.form-horizontal(method="post" action="/PostQuestion")
    each val, key in Data
      input(type="hidden" name=key value=val)
    div.container
      div.card.my-3
        div.card-header
          span.font-weight-bold 質問情報
        div.card-body
          div.form-group.row.my-3
            label.col-sm-2.col-form-label タイトル：
            div.col-sm-10.text-left #{Data['questionTitle']}
          div.form-group.row.my-3
            label.col-sm-2.col-form-label 質問内容：
            div.col-sm-10.text-left !{Data['questionContent'].replace(/\r?\n/g, '<br>')}
        div.card-footer
          div.row
            div.button-group.mr-2
              button.btn.btn-outline-danger(type="submit" name="mode" value="edit") 質問情報入力へ戻る
            div.button-group.ml-auto
              button.btn.btn-primary(type="submit" name="mode" value="regist") 投稿する
doctype html
html(lang="ja")
  head
    title=title
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width initial-scale=1")
    link(rel="stylesheet"
        href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
        crossorigin="anonymous")
    link(rel="stylesheet" href="/stylesheets/style.css")
    script(defer, src="/javascripts/bundle.js")
    script(src="https://kit.fontawesome.com/c0463d6a29.js" crossorigin="anonymous")
  body
    div.fixed-top
      nav.navbar.navbar-expand-sm.navbar-dark.bg-dark
        button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarNav4" aria-controls="navbarNav4" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
        a.navbar-brand(href="/") 質問屋さん
        div.collapse.navbar-collapse
          ul.navbar-nav
            li.nav-item
              form(method="post" name="board" action="/QuestionBoard")
                input(type="hidden" name="mode" value="board")
                a.nav-link(href="javascript:board.submit()") 質問一覧
            if UserData
              li.nav-item
                form(method="post" name="AccountHome" action="/AccountHome")
                  input(type="hidden" name="mode" value="accountInfo")
                  a.nav-link(href="javascript:AccountHome.submit()") アカウント情報
              li.nav-item
                form(method="post" name="MyQuestion" action="/MyQuestion")
                  input(type="hidden" name="mode" value="MyQuestion")
                  a.nav-link(href="javascript:MyQuestion.submit()") 自分の質問
        div.text-right
          div.btn-toolbar.btn-group
            if UserData
              form(method="post" action="PostQuestion")
                button.btn.btn-success.m-1(type="submit" name="mode" value="edit") 質問投稿
              form(method="post" action="logout")
                button.btn.btn-danger.m-1(type="submit" name="mode" value="logout") ログアウト
            else
              form(method="post" action="CreateAccount")
                button.btn.btn-secondary.m-1(type="submit" name="mode" value="edit") アカウント作成
              form(method="post" action="login")
                button.btn.btn-primary.m-1(type="submit" name="mode" value="login") ログイン
    div.container
      block content
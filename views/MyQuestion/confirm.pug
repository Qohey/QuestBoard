extends ../layout

block content
  form.form-inline.form-horizontal(method="post" action="/MyQuestion")
    each val, key in Question
      input(type="hidden" name=key value=val)
    div.container
      div.card.my-3
        div.card-header
          span.font-weight-bold 質問情報
        div.card-body
          div.form-group.row.my-3
            label.col-sm-2.col-form-label タイトル：
            div.col-sm-10.text-left #{Question['questionTitle']}
          div.form-group.row.my-3
            label.col-sm-2.col-form-label 質問内容：
            div.col-sm-10.text-left !{Question['questionContent'].replace(/\r?\n/g, '<br>')}
          div.form-group.row.my-3
            label.col-sm-2.col-form-label 表示設定：
            if (Question['isDisplay'] == "true")
              div.col-sm-10.text-left 表示
            else
              div.col-sm-10.text-left 非表示
        div.card-footer
          div.row
            div.button-group.mr-2
              button.btn.btn-outline-danger(type="submit" name="mode" value="back") 質問編集へ戻る
            div.button-group.ml-auto
              button.btn.btn-primary(type="submit" name="mode" value="regist") 更新する